@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link id="linkRootUrl" href="~/" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/ripples.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-material-design.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>Employees</title>
</head>
<body>
    <nav class="navbar navbar-primary">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    <img alt="Brand" style="height: 32px; width: 32px;" src="http://harshw.com/wp-content/uploads/2017/03/EFP_Logo.png">
                    Entity Framework <strong>Paginate</strong>
                </a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Employee Information</h3>
                </div>
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row-fluid">
                            <div class="col-xs-2">
                                <div class="form-group label-floating">
                                    <label class="control-label" for="focusedInput1">search by LoginID</label>
                                    <input class="form-control" id="focusedInput1" type="text" data-bind="value:vm.searchText">
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label for="selJobbTitle" class="col-md-3 control-label">Job Title</label>
                                    <div class="col-md-9">
                                        <select id="selJobbTitle" class="form-control"data-bind="value: vm.jobTitle">
                                            <option value=''>All</option>
                                            <option value='Accountant'>Accountant</option>
                                            <option value='Chief Executive Officer'>Chief Executive Officer</option>
                                            <option value='Marketing Specialist'>Marketing Specialist</option>
                                            <option value='Network Manager'>Network Manager</option>
                                            <option value='Production Control Manager'>Production Control Manager</option>
                                            <option value='Production Technician - WC20'>Production Technician - WC20</option>
                                            <option value='Purchasing Manager'>Purchasing Manager</option>
                                            <option value='Vice President of Engineering'>Vice President of Engineering</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="form-group">
                                    <label for="selSortBy" class="col-md-5 control-label">Sort By</label>
                                    <div class="col-md-7">
                                        <select id="selSortBy" class="form-control" data-bind="value: vm.sortBy">
                                            <option value=1>Id</option>
                                            <option value=2>LoginID</option>
                                            <option value=3>JobTitle</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="form-group">
                                    <label for="selPageSize" class="col-md-8 control-label">Page Size</label>
                                    <div class="col-md-4">
                                        <select id="selPageSize" class="form-control" data-bind="value: vm.pageSize">
                                            <option value=5>5</option>
                                            <option value=10>10</option>
                                            <option value=20>20</option>
                                            <option value=50>50</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <div class="form-group">
                                    <button class="btn btn-raised btn-primary pull-right"
                                            data-bind="click:function(){getEmployees();}">Search</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>LoginID</th>
                            <th>JobTitle</th>
                            <th>MaritalStatus</th>
                            <th>Gender</th>
                        </tr>
                    </thead>
                    <tbody data-bind='foreach: vm.employees'>
                        <tr>
                            <td><span data-bind="text: BusinessEntityID"></span></td>
                            <td><span data-bind="text: LoginID"></span></td>
                            <td><span data-bind="text: JobTitle"></span></td>
                            <td><span data-bind="text: MaritalStatus"></span></td>
                            <td><span data-bind="text: Gender"></span></td>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <nav aria-label="Page navigation">
                        <ul class="pagination" data-bind='foreach: new Array(vm.pageCount())'>
                            <li><a data-bind='text: $index()+1, click: function(){$parent.vm.currentPage($index()+1);$parent.getEmployees();}'></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="row">

        </div>
        <div class="row"></div>
        <div class="row">

        </div>
    </div>

</body>
</html>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/ripples.min.js"></script>
<script src="~/Scripts/respond.js"></script>
<script src="~/Scripts/material.min.js"></script>
<script src="~/Scripts/knockout-3.4.2.js"></script>
<script src="~/Scripts/Employees.js"></script>